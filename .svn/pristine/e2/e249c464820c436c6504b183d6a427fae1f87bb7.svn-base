<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbarweb" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_shoppy1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_eight_dp"
        android:layout_marginLeft="@dimen/dimen_eight_dp"
        android:layout_marginRight="@dimen/dimen_eight_dp"
        android:layout_marginBottom="@dimen/dimen_eight_dp"
        android:background="@color/white"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dimen_six_dp">

            <com.nebulacompanies.ibo.view.MyTextView
                android:id="@+id/package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_fourteen_sp"
                android:ellipsize="end"
                android:gravity="center"
                android:text="Shoppy 1 "
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_eighteen_sp" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:id="@+id/package_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_fourteen_sp"
                android:ellipsize="end"
                android:gravity="center"
                android:text="Shoppy 1 "
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_eighteen_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgshoppy"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/shop"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dimen_ten_dp"
        >

        <com.nebulacompanies.ibo.view.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_eight_dp"
            android:layout_marginRight="@dimen/dimen_eight_dp"
            android:background="@color/theme_color"
            android:padding="5dp"
            android:letterSpacing="0"
            android:text="@string/tnc"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="visible"
            android:textSize="@dimen/dimen_eighteen_sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/tv_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:layout_margin="@dimen/dimen_eight_dp"
            android:textSize="@dimen/dimen_eighteen_sp"/>

        </ScrollView>
        <Button
            android:id="@+id/nextButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_eight_dp"
            android:layout_marginRight="@dimen/dimen_eight_dp"
            android:backgroundTint="@color/theme_color"
            android:letterSpacing="0"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/dimen_eighteen_sp" />


    </LinearLayout>


</LinearLayout>